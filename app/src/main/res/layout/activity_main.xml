<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_key_board_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击空白处键盘消失"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_right_movie"
        app:layout_constraintTop_toBottomOf="@id/tv_result" />

    <Button
        android:id="@+id/btn_right_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计算"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_key_board_hide"
        app:layout_constraintLeft_toRightOf="@id/btn_key_board_hide"
        app:layout_constraintRight_toRightOf="@id/btn_new_page" />

    <Button
        android:id="@+id/btn_new_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新页面"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_key_board_hide"
        app:layout_constraintLeft_toRightOf="@id/btn_right_movie"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/btn_right_movie">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_test_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动画" />

            <Button
                android:id="@+id/btn_test_tween_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="补间" />

            <Button
                android:id="@+id/btn_test_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="权限" />

            <Button
                android:id="@+id/btn_test_status_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态栏" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_view_drag_helper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拖拽" />

            <Button
                android:id="@+id/btn_spannable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spannable" />

            <Button
                android:id="@+id/btn_swipe_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="滑动退出" />

            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态栏" />
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>